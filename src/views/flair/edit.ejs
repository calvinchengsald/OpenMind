<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Flair</h1>

<!-- #1 -->
      <form action="/flair/<%= flair.id %>/update" method="post"> <!-- should be post -->
        <div class="form-group">
          <label for="name">flair name</label>
<!-- #2 -->
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="color">Color</label>
          <select class="form-control" name="color">
            <option value="Red" <%= flair.color=="Red"?"selected":"" %> >Red</option>
            <option value="Blue" <%= flair.color=="Blue"?"selected":"" %> >Blue</option>
            <option value="Orange" <%= flair.color=="Orange"?"selected":"" %> >Orange</option>
            <option value="Yellow" <%= flair.color=="Yellow"?"selected":"" %> >Yellow</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
